---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/landing/Navbar.astro';
import Hero from '../components/landing/Hero.astro';
import StatsComparison from '../components/landing/StatsComparison.astro';
import Deploy from '../components/landing/Deploy.astro';
import Features from '../components/landing/Features.astro';
import Architecture from '../components/landing/Architecture.astro';
import TerminalDemo from '../components/landing/TerminalDemo.astro';
import ApiDocs from '../components/landing/ApiDocs.astro';
---

<Layout>
  <Navbar />
  
  <main>
    <Hero />
    <StatsComparison />
    <Deploy />
    <Features />
    <Architecture />
    <TerminalDemo />
    <ApiDocs />
  </main>

  <footer class="bg-base-300 py-12 border-t border-base-content/10">
    <div class="container mx-auto px-4">
      <div class="flex flex-col md:flex-row justify-between items-center gap-6">
        
        <div class="flex items-center gap-2">
          <div class="w-8 h-8 flex items-center justify-center">
             <img src="/airboost_logo.svg" alt="Airboost Logo" class="w-full h-full" />
          </div>
          <span class="font-bold text-xl tracking-tight">Airboost</span>
        </div>

        <div class="flex gap-6 text-sm font-medium text-base-content/60">
          <a href="https://github.com/guischk/airboost" class="hover:text-primary transition-colors">GitHub</a>
          <a href="https://github.com/guischk/airboost/issues" class="hover:text-primary transition-colors">Issues</a>
          <a href="https://railway.com/template/airboost?referralCode=3Ri9K9" class="hover:text-primary transition-colors">Deploy</a>
        </div>

        <div class="text-sm text-base-content/40 text-center md:text-right">
          <p>Â© {new Date().getFullYear()} Guischk. MIT License.</p>
          <p class="mt-1">Built with <a href="https://astro.build" class="underline hover:text-primary">Astro</a> & <a href="https://bun.sh" class="underline hover:text-primary">Bun</a>.</p>
        </div>

      </div>
    </div>
  </footer>
</Layout>
