---
import { ArrowRight, Github, Zap, Gauge, Database } from '@lucide/astro';
---
<section class="relative min-h-[90vh] flex items-center overflow-hidden bg-base-100">
  
  <!-- Dynamic background with animated gradient mesh -->
  <div class="absolute inset-0 -z-10">
    <!-- Base gradient -->
    <div class="absolute inset-0 bg-gradient-to-br from-base-100 via-base-100 to-base-200"></div>
    
    <!-- Animated geometric shapes -->
    <div class="absolute top-20 right-[10%] w-[500px] h-[500px] rounded-full bg-primary/5 blur-[100px] animate-float" style="animation-duration: 8s;"></div>
    <div class="absolute bottom-20 left-[5%] w-[400px] h-[400px] rounded-full bg-secondary/5 blur-[80px] animate-float" style="animation-duration: 10s; animation-delay: 1s;"></div>
    
    <!-- Grid pattern overlay -->
    <div class="absolute inset-0 opacity-[0.03]" style="background-image: radial-gradient(circle at 1px 1px, currentColor 1px, transparent 0); background-size: 40px 40px;"></div>
    
    <!-- Diagonal lines accent -->
    <div class="absolute top-0 right-0 w-1/2 h-full opacity-[0.02]">
      <div class="absolute inset-0" style="background: repeating-linear-gradient(45deg, currentColor 0px, currentColor 2px, transparent 2px, transparent 60px);"></div>
    </div>
  </div>

  <div class="container mx-auto px-4 py-20 md:py-32">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      
      <!-- Left: Content -->
      <div class="space-y-8 order-2 lg:order-1">
        
        <!-- Version badge -->
        <div class="inline-flex items-center gap-3 px-4 py-2.5 rounded-2xl bg-gradient-to-r from-base-200/80 to-base-200/40 border border-base-content/10 backdrop-blur-sm hover:border-primary/20 transition-all duration-300 group cursor-default">
          <span class="relative flex h-2.5 w-2.5">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-success opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2.5 w-2.5 bg-success shadow-lg shadow-success/50"></span>
          </span>
          <span class="font-mono text-sm font-semibold">v1.0</span>
          <span class="text-base-content/50 text-sm">•</span>
          <span class="text-sm text-base-content/70">Production ready</span>
        </div>

        <!-- Main headline - Split for impact -->
        <div class="space-y-4">
          <h1 class="font-display font-black text-5xl md:text-6xl lg:text-7xl leading-[0.95] tracking-tight" style="font-family: var(--font-display);">
            <span class="block text-base-content">
              Airtable,
            </span>
            <span class="block mt-2">
              <span class="inline-block bg-gradient-to-r from-primary via-secondary to-primary bg-clip-text text-transparent animate-gradient" style="background-size: 200% auto;">
                240x faster
              </span>
            </span>
          </h1>
          
          <p class="text-xl md:text-2xl text-base-content/60 max-w-xl leading-relaxed font-medium">
            High-performance SQLite cache that turns your Airtable into a 
            <span class="text-base-content font-semibold">production-ready backend</span>.
          </p>
        </div>

        <!-- Key features inline -->
        <div class="flex flex-wrap gap-4 text-sm">
          <div class="flex items-center gap-2 px-4 py-2 rounded-xl bg-base-200/50 border border-base-content/5">
            <Zap class="w-4 h-4 text-warning" />
            <span class="font-semibold">Sub-ms queries</span>
          </div>
          <div class="flex items-center gap-2 px-4 py-2 rounded-xl bg-base-200/50 border border-base-content/5">
            <Gauge class="w-4 h-4 text-success" />
            <span class="font-semibold">Zero downtime</span>
          </div>
          <div class="flex items-center gap-2 px-4 py-2 rounded-xl bg-base-200/50 border border-base-content/5">
            <Database class="w-4 h-4 text-info" />
            <span class="font-semibold">Self-hosted</span>
          </div>
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row items-start gap-4 pt-4">
          <a 
            href="#deploy" 
            class="group relative inline-flex items-center justify-center px-8 py-4 font-bold text-lg rounded-xl bg-primary text-primary-content shadow-xl shadow-primary/25 hover:shadow-2xl hover:shadow-primary/40 transition-all duration-300 hover:-translate-y-1 overflow-hidden"
          >
            <div class="absolute inset-0 bg-gradient-to-r from-primary to-secondary opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            <span class="relative flex items-center gap-2">
              Get Started
              <ArrowRight class="w-5 h-5 group-hover:translate-x-1 transition-transform duration-300" />
            </span>
          </a>
          
          <a 
            href="https://github.com/guischk/airboost" 
            target="_blank" 
            rel="noopener noreferrer"
            class="group inline-flex items-center justify-center px-8 py-4 font-semibold text-lg rounded-xl border-2 border-base-content/20 hover:border-base-content/40 hover:bg-base-content/5 transition-all duration-300"
          >
            <Github class="w-5 h-5 mr-2 group-hover:rotate-12 transition-transform duration-300" />
            View Source
          </a>
        </div>

        <!-- Social proof / Trust indicators -->
        <div class="flex items-center gap-8 pt-6 border-t border-base-content/5">
          <div class="flex items-center gap-2 text-sm text-base-content/50">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path></svg>
            <span class="font-medium">MIT License</span>
          </div>
          <div class="flex items-center gap-2 text-sm text-base-content/50">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"></path></svg>
            <span class="font-medium">Open Source</span>
          </div>
        </div>
      </div>

      <!-- Right: Visual performance demo -->
      <div class="order-1 lg:order-2">
        <div class="relative">
          
          <!-- Performance comparison card -->
          <div class="relative bg-gradient-to-br from-base-100 to-base-200/50 rounded-3xl border border-base-content/10 p-8 md:p-10 shadow-2xl backdrop-blur-sm">
            
            <!-- Decorative corner accent -->
            <div class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-br from-primary/10 to-transparent rounded-bl-[100px] rounded-tr-3xl"></div>
            
            <div class="relative space-y-8">
              
              <!-- Header -->
              <div class="space-y-2">
                <h3 class="font-display font-bold text-2xl" style="font-family: var(--font-display);">Performance Comparison</h3>
                <p class="text-sm text-base-content/60">Average query response time</p>
              </div>

              <!-- Airtable Direct -->
              <div class="space-y-3">
                <div class="flex items-center justify-between">
                  <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-xl bg-base-200 flex items-center justify-center">
                      <img src="https://upload.wikimedia.org/wikipedia/commons/4/4b/Airtable_Logo.svg" alt="Airtable" class="w-6 h-6 opacity-60" />
                    </div>
                    <div>
                      <div class="font-semibold text-sm">Airtable API</div>
                      <div class="text-xs text-base-content/50">Direct requests</div>
                    </div>
                  </div>
                  <div class="text-right">
                    <div class="font-mono font-bold text-2xl text-error">270ms</div>
                    <div class="text-xs text-base-content/50">avg</div>
                  </div>
                </div>
                <div class="h-3 bg-base-200 rounded-full overflow-hidden">
                  <div class="h-full bg-gradient-to-r from-error to-error/70 w-full rounded-full animate-pulse" style="animation-duration: 2s;"></div>
                </div>
                <div class="flex items-center gap-2 text-xs text-base-content/50">
                  <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                  Rate limited: 5 req/s
                </div>
              </div>

              <!-- Divider with arrow -->
              <div class="flex items-center gap-4">
                <div class="flex-1 h-px bg-gradient-to-r from-transparent via-base-content/10 to-transparent"></div>
                <div class="flex items-center gap-2 text-xs font-semibold text-base-content/40 uppercase tracking-wider">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path></svg>
                  vs
                </div>
                <div class="flex-1 h-px bg-gradient-to-r from-transparent via-base-content/10 to-transparent"></div>
              </div>

              <!-- Airboost -->
              <div class="space-y-3">
                <div class="flex items-center justify-between">
                  <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-primary/20 to-secondary/20 flex items-center justify-center">
                      <Zap class="w-5 h-5 text-primary" />
                    </div>
                    <div>
                      <div class="font-bold text-sm flex items-center gap-2">
                        <span>Airboost</span>
                        <span class="inline-flex items-center gap-1 px-2 py-0.5 rounded-full bg-success/10 text-success text-[10px] font-bold uppercase tracking-wider">
                          <span class="w-1 h-1 rounded-full bg-success"></span>
                          Fast
                        </span>
                      </div>
                      <div class="text-xs text-base-content/50">SQLite cache</div>
                    </div>
                  </div>
                  <div class="text-right">
                    <div class="font-mono font-black text-3xl text-success glow-secondary">1ms</div>
                    <div class="text-xs text-success font-semibold">avg</div>
                  </div>
                </div>
                <div class="h-3 bg-base-200 rounded-full overflow-hidden relative">
                  <div class="absolute inset-0 flex items-center">
                    <div class="h-full bg-gradient-to-r from-success via-secondary to-success w-[0.4%] rounded-full shadow-lg shadow-success/50 animate-glow-bar"></div>
                  </div>
                </div>
                <div class="flex items-center gap-2 text-xs text-success font-semibold">
                  <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>
                  Unlimited requests
                </div>
              </div>

              <!-- Result badge -->
              <div class="pt-4 border-t border-base-content/5">
                <div class="inline-flex items-center gap-3 px-4 py-2 rounded-xl bg-gradient-to-r from-success/10 to-secondary/10 border border-success/20">
                  <svg class="w-5 h-5 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path></svg>
                  <span class="font-display font-black text-xl" style="font-family: var(--font-display);">240× Faster</span>
                </div>
              </div>

            </div>
          </div>

          <!-- Floating accent elements -->
          <div class="absolute -bottom-6 -left-6 w-24 h-24 bg-gradient-to-br from-primary/20 to-secondary/20 rounded-2xl rotate-12 blur-xl animate-float" style="animation-duration: 6s; animation-delay: 0.5s;"></div>
          <div class="absolute -top-6 -right-6 w-20 h-20 bg-gradient-to-br from-secondary/20 to-accent/20 rounded-2xl -rotate-12 blur-xl animate-float" style="animation-duration: 7s;"></div>
        </div>
      </div>

    </div>
  </div>
</section>

<style>
  @keyframes float {
    0%, 100% {
      transform: translateY(0) rotate(0deg);
    }
    50% {
      transform: translateY(-20px) rotate(5deg);
    }
  }

  @keyframes gradient {
    0%, 100% {
      background-position: 0% center;
    }
    50% {
      background-position: 100% center;
    }
  }

  @keyframes glow-bar {
    0%, 100% {
      box-shadow: 0 0 15px oklch(var(--color-success) / 0.5), 0 0 30px oklch(var(--color-success) / 0.3);
    }
    50% {
      box-shadow: 0 0 25px oklch(var(--color-success) / 0.7), 0 0 50px oklch(var(--color-success) / 0.5);
    }
  }

  .animate-float {
    animation: float ease-in-out infinite;
  }

  .animate-gradient {
    animation: gradient 8s ease infinite;
  }

  .animate-glow-bar {
    animation: glow-bar 2s ease-in-out infinite;
  }
</style>
