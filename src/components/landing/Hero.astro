<section class="relative pt-20 pb-16 md:pt-32 md:pb-24 overflow-hidden">
  <!-- Background Elements -->
  <div class="absolute inset-0 -z-10 overflow-hidden">
    <div class="absolute -top-[30%] -right-[10%] w-[70%] h-[70%] rounded-full bg-primary/5 blur-[120px] opacity-70"></div>
    <div class="absolute top-[20%] -left-[10%] w-[50%] h-[50%] rounded-full bg-secondary/5 blur-[100px] opacity-60"></div>
  </div>

  <div class="container mx-auto px-4 text-center z-10">
    <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-base-200/50 border border-base-content/5 text-sm font-medium text-base-content/70 mb-8 animate-fade-in-up">
      <span class="relative flex h-2 w-2">
        <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-success opacity-75"></span>
        <span class="relative inline-flex rounded-full h-2 w-2 bg-success"></span>
      </span>
      v1.0 is now available
    </div>

    <h1 class="text-5xl md:text-7xl font-bold tracking-tight mb-6 max-w-4xl mx-auto bg-clip-text text-transparent bg-gradient-to-b from-base-content to-base-content/60">
      High-performance SQLite cache for <span class="text-primary">Airtable</span>
    </h1>

    <p class="text-xl md:text-2xl text-base-content/60 max-w-2xl mx-auto mb-10 leading-relaxed">
      Turn your Airtable into a production-ready backend.
      <br class="hidden md:block" />
      <span class="text-base-content font-medium">240x faster queries</span>. Zero-downtime. Real-time sync.
    </p>

    <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
      <a href="#deploy" class="btn btn-primary btn-lg rounded-xl shadow-xl shadow-primary/20 px-8">
        Get Started
