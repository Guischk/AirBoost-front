---
import { Zap, RefreshCw, Shield, Server, Paperclip, Webhook } from '@lucide/astro';

const features = [
  {
    icon: Zap,
    title: "Blazing Fast",
    desc: "Sub-millisecond queries powered by SQLite. Access your data instantly without waiting for Airtable API.",
    gradient: "from-yellow-400 to-orange-500"
  },
  {
    icon: RefreshCw,
    title: "Zero Downtime",
    desc: "Atomic dual-database strategy ensures your API never goes down, even during cache refreshes.",
    gradient: "from-blue-400 to-cyan-500"
  },
  {
    icon: Shield,
    title: "Type Safety",
    desc: "Full TypeScript support with auto-generated types based on your actual Airtable schema.",
    gradient: "from-purple-400 to-pink-500"
  },
  {
    icon: Server,
    title: "Self-Hosted",
    desc: "Your data stays on your infrastructure. Deploy anywhere Bun runs: Railway, Fly.io, or VPS.",
    gradient: "from-green-400 to-emerald-500"
  },
  {
    icon: Paperclip,
    title: "Attachment Handling",
    desc: "Automatically downloads and serves files locally. No more expired Airtable attachment URLs.",
    gradient: "from-indigo-400 to-blue-500"
  },
  {
    icon: Webhook,
    title: "Real-time Sync",
    desc: "Webhook support for instant updates when data changes in Airtable.",
    gradient: "from-red-400 to-pink-500"
  }
];
---
<section id="features" class="py-24 relative">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-display font-bold mb-4" style="font-family: var(--font-display);">
        <span class="text-gradient-primary">Everything you need</span>
      </h2>
      <p class="text-lg text-base-content/60 max-w-2xl mx-auto leading-relaxed">
        Built for developers who love Airtable's UI but hate its API limitations.
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {features.map((feature, index) => (
        <div 
          class="group card bg-base-200/30 hover:bg-base-200/60 border border-base-content/5 hover:border-primary/20 transition-all duration-300 hover:shadow-xl hover:shadow-primary/10 hover:-translate-y-1 backdrop-blur-sm"
          style={`animation: fade-in-up 0.5s ease-out ${index * 0.1}s both;`}
        >
          <div class="card-body">
            <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-primary/10 to-secondary/10 text-primary flex items-center justify-center mb-4 group-hover:scale-110 group-hover:rotate-3 transition-all duration-300">
              <feature.icon class="w-6 h-6 group-hover:text-primary transition-colors duration-300" />
            </div>
            <h3 class="card-title text-xl mb-2 font-semibold" style="font-family: var(--font-display);">
              {feature.title}
            </h3>
            <p class="text-base-content/60 text-sm leading-relaxed">
              {feature.desc}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
